# Node environment
NODE_ENV=production
PORT=8080

# Email Configuration
# Provider options: smtp, gmail, sendgrid, ses
EMAIL_PROVIDER=gmail

# Gmail configuration
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-specific-password

# OR SendGrid configuration
# SENDGRID_API_KEY=your-sendgrid-api-key

# OR Generic SMTP configuration
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=username
# SMTP_PASS=password

# Default sender
SMTP_FROM="Form Handler" <noreply@yourdomain.com>

# API Keys (format: "key:appname,key2:appname2")
# Generate keys with: openssl rand -hex 32
API_KEYS=your-api-key-1:murr2k-github-io,your-api-key-2:another-app

# Allowed origins (comma-separated)
ALLOWED_ORIGINS=https://murr2k.github.io,https://murraykopit.com,http://localhost:3000

# Default recipient email
DEFAULT_EMAIL=your-email@example.com

# App-specific emails (JSON format)
APP_EMAILS={"murr2k-github-io":"your-email@example.com","another-app":"other@example.com"}

# Logging
LOG_LEVEL=info